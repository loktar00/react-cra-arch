{
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "@common/*": [
          "./components/Common/*"
        ],
        "@components/*": [
          "./components/*"
        ],
        "@pages/*":  [
          "./components/Pages/*"
        ],
        "@api/*": [
          "./api/*"
        ],
        "@hooks/*": [
          "./hooks/*"
        ],
        "@utils/*": [
          "./utils/*"
        ]
      },
      "target": "esnext",
      "module": "esnext",
      "allowJs": true,
      "pretty": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "isolatedModules": true,
      "strict": true,
      "skipLibCheck": true,
      "checkJs": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "typeRoots": [
        "../../typings",
        "node_modules/@types"
      ],
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "outDir": "./dist/",
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": [
      "./src/**/*",
      "./jest.setup.ts"
    ],
    "exclude": [
      "node_modules",
      "**/__tests__/**",
      "Legacy"
    ]
  }
